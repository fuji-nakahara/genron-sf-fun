<div class="col" id="work-<%= work.id %>">
  <div class="card mb-3" data-controller="vote" data-vote-endpoint="<%= work_vote_path(work) %>" data-vote-voted="<%= work.voters.include?(current_user) %>">
    <div class="card-body">
      <div class="card-subtitle text-muted mb-1">
        <% if local_assigns[:header] == :kadai %>
          <%= link_to work.kadai.year_and_number, work.kadai, class: 'link-secondary' %>
        <% else %>
          <%= render work.student %>
        <% end %>
      </div>

      <h3 class="card-title h5">
        <%= link_to work.title, work.url, class: 'link-dark text-decoration-none', target: '_blank' %>
        <%= yield %>
      </h3>

      <p class="card-text">
        <%= link_to icon('fas', 'external-link-alt', work.url_domain), work.url, class: 'link-secondary', target: '_blank' %>
      </p>

      <ul class="card-text list-inline" data-vote-target="iconList">
        <% work.voters.each do |user| %>
          <li class="list-inline-item mr-0" data-vote-target="<%= 'icon' if user == current_user %>">
            <%= link_to_twitter_profile_with_image(user) %>
          </li>
        <% end %>
        <% if current_user %>
          <template data-vote-target="iconTemplate">
            <li class="list-inline-item">
              <%= link_to_twitter_profile_with_image(current_user) %>
            </li>
          </template>
        <% end %>
      </ul>

      <% if current_user %>
        <%= button_tag class: "btn btn-sm btn-outline-#{work_color(work)}", disabled: current_user.student_id == work.student.id, data: { 'vote-target': 'button', action: 'click->vote#toggle' } do %>
          <%= icon('fas', 'thumbs-up') %> <span data-vote-target="buttonText"></span>
          <span class="badge rounded-pill bg-light text-dark" data-vote-target="count"><%= work.votes_count %></span>
        <% end %>
      <% else %>
        <button class="btn btn-sm btn-outline-<%= work_color(work) %>" data-toggle="modal" data-target="#modal-require-login">
          <%= icon('fas', 'thumbs-up') %> 投票する <span class="badge rounded-pill bg-light text-dark"><%= work.votes_count %></span>
        </button>
      <% end %>
      <% if current_user && current_user == work.student.user %>
        <%= link_to icon('fab', 'twitter', 'コメントを探す'), twitter_search_url(q: work.url), class: 'card-link btn btn-sm btn-primary', target: '_blank' %>
      <% else %>
        <% tweet_param = { text: "【#{work.class.model_name.human}】#{work.student.name}『#{work.title}』", url: work.url, hashtags: work.genron_sf_id ? 'SF創作講座' : '裏SF創作講座' } %>
        <%= link_to icon('fab', 'twitter', 'コメントする'), twitter_tweet_url(tweet_param), class: 'card-link btn btn-sm btn-outline-primary', target: '_blank' %>
      <% end %>
    </div>
  </div>
</div>
