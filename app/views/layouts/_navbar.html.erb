<nav class="navbar navbar-expand navbar-dark bg-dark mb-3" id="navbar">
  <div class="container">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <span class="text-dark bg-light bg-gradient">裏</span>SF創作講座
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content" aria-controls="navbar-content" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbar-content">
      <ul class="navbar-nav mr-auto">
      </ul>
      <% if current_user %>
        <div class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbar-user-menu" role="button" data-toggle="dropdown" aria-expanded="false">
              <%= image_tag current_user.image_url, size: '30x30', class: 'd-inline-block align-top ml-1 rounded-circle', loading: 'lazy' %>
            </a>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar-user-menu">
              <li><%= link_to '作品一覧', current_user.student, class: 'dropdown-item' %></li>
              <% if current_user.student.genron_sf_id %>
                <li><%= link_to '電子書籍の作成', ebooks_path, class: 'dropdown-item' %></li>
              <% else %>
                <li><%= link_to '設定', profile_path, class: 'dropdown-item' %></li>
              <% end %>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to 'ログアウト', logout_path, method: :post, class: 'dropdown-item' %></li>
            </ul>
          </li>
        </div>
      <% else %>
        <%= link_to icon('fab', 'twitter', 'Twitter でログイン'), "/auth/twitter?#{{ origin: request.fullpath }.to_param}", method: :post, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</nav>
