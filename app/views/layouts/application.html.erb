<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= content_for?(:title) ? "#{content_for(:title)} - #{translate('app.title')}" : translate('app.title') %></title>
    <meta name="description" content="<%= content_for(:description).presence || translate('app.description') %>">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render 'layouts/favicon' %>

    <%= render 'layouts/ogp' %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <div class="container">
      <%= render 'layouts/flash' %>

      <%= render 'modal_error' %>
      <%= render 'modal_require_login' unless current_user %>

      <main id="main">
        <%= yield %>
      </main>
      <footer class="text-center my-3">
        <small>&copy; 2020 裏SF創作講座</small>
      </footer>
    </div>
  </body>
</html>
