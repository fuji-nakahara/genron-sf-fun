<div class="col">
  <div class="card mb-3" data-controller="vote" data-vote-endpoint="<%= work_vote_path(work) %>" data-vote-voted="<%= work.voters.include?(current_user) %>">
    <div class="card-body">
      <div class="card-subtitle text-muted mb-1">
        <% if local_assigns[:header] == :kadai %>
          <%= link_to work.kadai.year_and_number, work.kadai, class: 'link-secondary' %>
        <% else %>
          <%= link_to work.student.url, class: 'link-secondary', target: '_blank' do %>
            <%= work.student.name %>
            <% if work.student.user %>
              <%= image_tag work.student.user.image_url, size: '24x24', class: 'border rounded-circle' %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <h3 class="card-title h5">
        <%= link_to work.title, work.url, class: 'link-dark text-decoration-none', target: '_blank' %>
        <% if work.is_a?(Jissaku) && work.score %>
          <span class="badge rounded-pill bg-success"><%= work.score.value %></span>
        <% end %>
      </h3>

      <p class="card-text">
        <%= link_to icon('fas', 'external-link-alt', work.url_domain), work.url, class: 'link-secondary text-decoration-none', target: '_blank' %>
      </p>

      <ul class="card-text list-inline" data-target="vote.iconList">
        <% work.voters.each do |user| %>
          <li class="list-inline-item" data-target="<%= 'vote.icon' if user == current_user %>">
            <%= link_to twitter_profile_url(user.twitter_screen_name), target: '_blank' do %>
              <%= image_tag user.image_url, size: '24x24', class: 'border rounded-circle', data: { toggle: 'tooltip', placement: 'top' }, title: user.twitter_screen_name %>
            <% end %>
          </li>
        <% end %>
        <% if current_user %>
          <template data-target="vote.iconTemplate">
            <li class="list-inline-item">
              <%= link_to twitter_profile_url(current_user.twitter_screen_name), target: '_blank' do %>
                <%= image_tag current_user.image_url, size: '24x24', class: 'border rounded-circle', data: { toggle: 'tooltip', placement: 'top' }, title: current_user.twitter_screen_name %>
              <% end %>
            </li>
          </template>
        <% end %>
      </ul>

      <% if current_user %>
        <%= button_tag class: 'btn btn-sm btn-outline-success', disabled: current_user.student_id == work.student.id, data: { target: 'vote.button', action: 'click->vote#toggle' } do %>
          <%= icon('fas', 'thumbs-up') %> <span data-target="vote.buttonText"></span>
          <span class="badge rounded-pill bg-light text-dark" data-target="vote.count"><%= work.votes_count %></span>
        <% end %>
      <% else %>
        <button class="card-link btn btn-sm btn-outline-success" data-toggle="modal" data-target="#modal-require-login">
          <%= icon('fas', 'thumbs-up') %> 投票する <span class="badge rounded-pill bg-light text-dark"><%= work.votes_count %></span>
        </button>
      <% end %>
    </div>
  </div>
</div>
